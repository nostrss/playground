{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        ".nuxt/**",
        ".output/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false
    },
    "test": {}
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_GA_ID",
    "NEXT_PUBLIC_REPO_ID",
    "NEXT_PUBLIC_CATEGORY_ID"
  ]
}
